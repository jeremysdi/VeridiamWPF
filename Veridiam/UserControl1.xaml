<UserControl x:Class="Veridiam.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Veridiam"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="200" Height="150">
        <Rectangle HorizontalAlignment="Center" Height="125" Stroke="Black" VerticalAlignment="Center" Width="200" Fill="#FF9C9C9C"/>
        <Button x:Name="BtnConnect" Content="Connect" HorizontalAlignment="Center" Margin="0,24,0,75" Width="100" FontWeight="Bold" FontSize="16"/>
        <Button x:Name="BtnDisconnect" Content="Disconnect" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" Height="51" Width="100" FontSize="16" FontWeight="Bold" Click="BtnDisconnect_Click"/>

    </Grid>
</UserControl>
