<UserControl x:Class="Veridiam.ServoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Veridiam"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="514">
    <Grid Width="200" Height="199" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Rectangle HorizontalAlignment="Center" Height="200" Stroke="Black" VerticalAlignment="Center" Width="200" Fill="#FFA7A4A4"/>
        <Button x:Name="BtnServoOn" Content="Servo On" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="50" Width="100" FontSize="16" FontWeight="Bold" Click="BtnServoOn_Click"/>
        <Button x:Name="BtnServoOff" Content="Servo Off" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="100" FontSize="16" FontWeight="Bold" Click="BtnServoOff_Click"/>
        <Button x:Name="BtnReset" Content="Reset" HorizontalAlignment="Center" Margin="0,139,0,0" VerticalAlignment="Top" Height="50" Width="100" FontSize="16" FontWeight="Bold" Click="BtnReset_Click"/>

    </Grid>
</UserControl>
