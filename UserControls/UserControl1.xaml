<UserControl x:Class="UserControls.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserControls"
             mc:Ignorable="d" Height="150" Width="200">
    <Grid x:Name="MainForm" Background="#FFDED7D7" Height="150" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200">
        <Grid.RowDefinitions>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="79*"/>
        </Grid.RowDefinitions>
        <Button x:Name="BtnConnect" Content="Connect" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="50" FontWeight="Bold" FontSize="16" Click="BtnConnect_Click" Grid.RowSpan="2"/>
        <Button Content="Disconnect" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="50" FontSize="16" FontWeight="Bold" Click="Button_Click" Grid.Row="2"/>

    </Grid>
</UserControl>
